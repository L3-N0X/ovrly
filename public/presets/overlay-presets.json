{
  "presets": [
    {
      "name": "2x Counter",
      "id": "2x-counter",
      "description": "Overlay for 2 player scores",
      "icon": "overlay_2_title_counter.svg",
      "globalStyle": {
        "outerJustifyContent": "flex-start",
        "outerAlignItems": "flex-start",
        "innerJustifyContent": "center",
        "innerAlignItems": "center",
        "flexDirection": "column",
        "gap": 24,
        "top": 0,
        "left": 0,
        "padding": 20,
        "radius": 10
      },
      "elements": [
        {
          "name": "Horizontal Alignment",
          "type": "CONTAINER",
          "style": {
            "flexDirection": "row",
            "gap": 33,
            "alignItems": "baseline",
            "justifyContent": "space-between"
          },
          "children": [
            {
              "name": "Player 1",
              "type": "TITLE",
              "style": {
                "fontFamily": "Roboto",
                "fontSize": 100
              },
              "title": {
                "text": "Player 1"
              }
            },
            {
              "name": "Score 1",
              "type": "COUNTER",
              "style": {
                "fontFamily": "Roboto Mono",
                "backgroundColor": "#ffffff44",
                "padding": 22,
                "radius": 29
              },
              "counter": {
                "value": 0
              }
            }
          ]
        },
        {
          "name": "Horizontal Alignment 2",
          "type": "CONTAINER",
          "style": {
            "flexDirection": "row",
            "gap": 32,
            "alignItems": "baseline",
            "justifyContent": "space-between",
            "paddingY": 0,
            "paddingX": 0
          },
          "children": [
            {
              "name": "Player 2",
              "type": "TITLE",
              "style": {
                "fontFamily": "Roboto",
                "fontSize": 100
              },
              "title": {
                "text": "Player 2"
              }
            },
            {
              "name": "Score 2",
              "type": "COUNTER",
              "style": {
                "fontFamily": "Roboto Mono",
                "backgroundColor": "#ffffff44",
                "padding": 23,
                "radius": 28
              },
              "counter": {
                "value": 0
              }
            }
          ]
        }
      ]
    }
  ]
}
